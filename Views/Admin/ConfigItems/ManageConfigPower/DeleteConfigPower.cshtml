@{
    ViewData["Title"] = "Delete PC Power";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    dynamic? selectedPower = TempData["selectedPower"];
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Are you sure you want to delete this power?</h1><br>
    </div>

    <!-- Details Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Power Details</h6>
            </div>
            <div class="card-body">
                <div class="mb-3"><label class="form-label">PC Power ID: @selectedPower.CONFIG_POWER_ID</label></div>
                <div class="mb-3"><label class="form-label">PC Power Name: @selectedPower.POWER_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Power Description: @selectedPower.POWER_DESCRIPTION</label></div>
                <div class="mb-3"><label class="form-label">Base Price: @selectedPower.BASE_PRICE.ToString("0.##")</label></div>
                <div class="mb-3"><label class="form-label">PC Power Status: @selectedPower.POWER_STATUS</label></div>
                <div class="mb-3">
                    <a class="btn btn-danger btn-icon-split" asp-action="DeleteConfigPower" asp-route-pcPowerId=@selectedPower.CONFIG_POWER_ID asp-controller="AdminManageConfigPower">
                        <span class="text">Yes</span>
                    </a>
                    <a class="btn btn-info btn-icon-split" asp-action="Index" asp-controller="AdminManageConfigPower">
                        <span class="text">No</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
