@{
    ViewData["Title"] = "Delete PC Misc";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    dynamic? selectedMisc = TempData["selectedMisc"];
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Are you sure you want to delete this misc?</h1><br>
    </div>

    <!-- Details Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Misc Details</h6>
            </div>
            <div class="card-body">
                <div class="mb-3"><label class="form-label">PC Misc ID: @selectedMisc.CONFIG_MISC_ID</label></div>
                <div class="mb-3"><label class="form-label">PC Misc Name: @selectedMisc.MISC_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Misc Description: @selectedMisc.MISC_DESCRIPTION</label></div>
                <div class="mb-3"><label class="form-label">Base Price: @selectedMisc.BASE_PRICE.ToString("0.##")</label></div>
                <div class="mb-3"><label class="form-label">PC Misc Status: @selectedMisc.MISC_STATUS</label></div>
                <div class="mb-3">
                    <a class="btn btn-danger btn-icon-split" asp-action="DeleteConfigMisc" asp-route-pcMiscId=@selectedMisc.CONFIG_MISC_ID asp-controller="AdminManageConfigMisc">
                        <span class="text">Yes</span>
                    </a>
                    <a class="btn btn-info btn-icon-split" asp-action="Index" asp-controller="AdminManageConfigMisc">
                        <span class="text">No</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
