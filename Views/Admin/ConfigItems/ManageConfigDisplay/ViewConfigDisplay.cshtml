@model IEnumerable<eComMaster.Models.MasterData.ConfigItems.ConfigDisplay>
@{
    ViewData["Title"] = "View PC Displays";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int configDisplayId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Displays</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditConfigDisplay" asp-route-displayId=-1 asp-controller="AdminManageConfigDisplay">
            <span class="text">Create Display</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Displays</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Base Price</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var display in Model)
                        {
                            configDisplayId = display.CONFIG_DISPLAY_ID;
                            <tr>
                                <td>@display.CONFIG_DISPLAY_ID</td>
                                <td>@display.DISPLAY_NAME</td>
                                <td>@display.DISPLAY_DESCRIPTION</td>
                                <td>@display.BASE_PRICE</td>
                                <td>@display.DISPLAY_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditConfigDisplay" asp-route-displayId=@configDisplayId asp-controller="AdminManageConfigDisplay">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeleteConfigDisplay" asp-route-displayId=@configDisplayId asp-controller="AdminManageConfigDisplay">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
