@{
    ViewData["Title"] = "Delete PC Display";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    dynamic? selectedDisplay = TempData["selectedDisplay"];
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Are you sure you want to delete this display?</h1><br>
    </div>

    <!-- Details Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Display Details</h6>
            </div>
            <div class="card-body">
                <div class="mb-3"><label class="form-label">PC Display ID: @selectedDisplay.CONFIG_DISPLAY_ID</label></div>
                <div class="mb-3"><label class="form-label">PC Display Name: @selectedDisplay.DISPLAY_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Display Description: @selectedDisplay.DISPLAY_DESCRIPTION</label></div>
                <div class="mb-3"><label class="form-label">Base Price: @selectedDisplay.BASE_PRICE.ToString("0.##")</label></div>
                <div class="mb-3"><label class="form-label">PC Display Status: @selectedDisplay.DISPLAY_STATUS</label></div>
                <div class="mb-3">
                    <a class="btn btn-danger btn-icon-split" asp-action="DeleteConfigDisplay" asp-route-pcDisplayId=@selectedDisplay.CONFIG_DISPLAY_ID asp-controller="AdminManageConfigDisplay">
                        <span class="text">Yes</span>
                    </a>
                    <a class="btn btn-info btn-icon-split" asp-action="Index" asp-controller="AdminManageConfigDisplay">
                        <span class="text">No</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
