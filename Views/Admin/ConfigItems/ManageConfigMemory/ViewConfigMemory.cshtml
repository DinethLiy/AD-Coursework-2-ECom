@model IEnumerable<eComMaster.Models.MasterData.ConfigItems.ConfigMemory>
@{
    ViewData["Title"] = "View PC Memory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int configMemoryId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Memory</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditConfigMemory" asp-route-memoryId=-1 asp-controller="AdminManageConfigMemory">
            <span class="text">Create Memory</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Memory</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Base Price</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var memory in Model)
                        {
                            configMemoryId = memory.CONFIG_MEMORY_ID;
                            <tr>
                                <td>@memory.CONFIG_MEMORY_ID</td>
                                <td>@memory.MEMORY_NAME</td>
                                <td>@memory.MEMORY_DESCRIPTION</td>
                                <td>@memory.BASE_PRICE.ToString("0.##")</td>
                                <td>@memory.MEMORY_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditConfigMemory" asp-route-memoryId=@configMemoryId asp-controller="AdminManageConfigMemory">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeleteConfigMemory" asp-route-memoryId=@configMemoryId asp-controller="AdminManageConfigMemory">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
