@model IEnumerable<eComMaster.Models.MasterData.ConfigItems.ConfigGraphics>
@{
    ViewData["Title"] = "View PC Graphics";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int configGraphicsId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Graphics</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditConfigGraphics" asp-route-graphicsId=-1 asp-controller="AdminManageConfigGraphics">
            <span class="text">Create Graphics</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Graphics</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Base Price</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var graphics in Model)
                        {
                            configGraphicsId = graphics.CONFIG_GRAPHICS_ID;
                            <tr>
                                <td>@graphics.CONFIG_GRAPHICS_ID</td>
                                <td>@graphics.GRAPHICS_NAME</td>
                                <td>@graphics.GRAPHICS_DESCRIPTION</td>
                                <td>@graphics.BASE_PRICE.ToString("0.##")</td>
                                <td>@graphics.GRAPHICS_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditConfigGraphics" asp-route-graphicsId=@configGraphicsId asp-controller="AdminManageConfigGraphics">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeleteConfigGraphics" asp-route-graphicsId=@configGraphicsId asp-controller="AdminManageConfigGraphics">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
