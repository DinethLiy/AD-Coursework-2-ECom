@model IEnumerable<eComMaster.Models.MasterData.ConfigItems.ConfigProcessor>
@{
    ViewData["Title"] = "View PC Processors";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int configProcessorId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Processors</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditConfigProcessor" asp-route-processorId=-1 asp-controller="AdminManageConfigProcessor">
            <span class="text">Create Processor</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Processors</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Base Price</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var processor in Model)
                        {
                            configProcessorId = processor.CONFIG_PROCESSOR_ID;
                            <tr>
                                <td>@processor.CONFIG_PROCESSOR_ID</td>
                                <td>@processor.PROCESSOR_NAME</td>
                                <td>@processor.PROCESSOR_DESCRIPTION</td>
                                <td>@processor.BASE_PRICE</td>
                                <td>@processor.PROCESSOR_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditConfigProcessor" asp-route-processorId=@configProcessorId asp-controller="AdminManageConfigProcessor">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeleteConfigProcessor" asp-route-processorId=@configProcessorId asp-controller="AdminManageConfigProcessor">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
