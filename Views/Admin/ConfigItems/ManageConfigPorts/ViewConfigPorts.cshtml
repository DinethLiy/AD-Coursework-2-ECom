@model IEnumerable<eComMaster.Models.MasterData.ConfigItems.ConfigPorts>
@{
    ViewData["Title"] = "View PC Ports";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int configPortsId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Ports</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditConfigPorts" asp-route-portsId=-1 asp-controller="AdminManageConfigPorts">
            <span class="text">Create Ports</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Ports</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Base Price</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ports in Model)
                        {
                            configPortsId = ports.CONFIG_PORTS_ID;
                            <tr>
                                <td>@ports.CONFIG_PORTS_ID</td>
                                <td>@ports.PORTS_NAME</td>
                                <td>@ports.PORTS_DESCRIPTION</td>
                                <td>@ports.BASE_PRICE</td>
                                <td>@ports.PORTS_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditConfigPorts" asp-route-portsId=@configPortsId asp-controller="AdminManageConfigPorts">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeleteConfigPorts" asp-route-portsId=@configPortsId asp-controller="AdminManageConfigPorts">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
