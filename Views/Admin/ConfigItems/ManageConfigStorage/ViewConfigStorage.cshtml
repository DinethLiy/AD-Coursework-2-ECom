@model IEnumerable<eComMaster.Models.MasterData.ConfigItems.ConfigStorage>
@{
    ViewData["Title"] = "View PC Storages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int configStorageId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Storages</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditConfigStorage" asp-route-storageId=-1 asp-controller="AdminManageConfigStorage">
            <span class="text">Create Storage</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Storages</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Base Price</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var storage in Model)
                        {
                            configStorageId = storage.CONFIG_STORAGE_ID;
                            <tr>
                                <td>@storage.CONFIG_STORAGE_ID</td>
                                <td>@storage.STORAGE_NAME</td>
                                <td>@storage.STORAGE_DESCRIPTION</td>
                                <td>@storage.BASE_PRICE</td>
                                <td>@storage.STORAGE_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditConfigStorage" asp-route-storageId=@configStorageId asp-controller="AdminManageConfigStorage">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeleteConfigStorage" asp-route-storageId=@configStorageId asp-controller="AdminManageConfigStorage">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
