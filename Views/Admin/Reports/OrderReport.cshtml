@{
    ViewData["Title"] = "Order History Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Order History Report</h1>
        @Html.ValidationSummary()
    </div>

    <!-- Form Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Report Parameters</h6>
            </div>
            <div class="card-body">
                <form action="@Url.Action("DownloadOrderReport", "AdminReport")" method="post" class="form-group">
                    <div class="mb-3">
                        <label class="form-label">Price should be greater than..</label>
                        <input type="number" name="price" id="price" min="0" max="99999999" step="0.01" value="0" class="form-control" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
