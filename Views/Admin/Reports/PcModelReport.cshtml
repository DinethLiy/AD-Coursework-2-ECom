@model IEnumerable<eComMaster.Models.MasterData.PcSeries>
@{
    ViewData["Title"] = "PC Model Report";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    dynamic? pcSeriesList = TempData["pcSeriesList"];
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">PC Model Report</h1>
        @Html.ValidationSummary()
    </div>

    <!-- Form Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Report Parameters</h6>
            </div>
            <div class="card-body">
                <form action="@Url.Action("DownloadPcModelReport", "AdminReport")" method="post" class="form-group">
                    <div class="mb-3">
                        <label class="form-label">PC Series</label>
                        <select name="series" id="series" class="custom-select">
                            <option value="all" selected>All</option>
                            @foreach (var pcSeries in Model)
                            {
                                <option value="@pcSeries.PC_SERIES_ID">@pcSeries.PC_SERIES_NAME</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
