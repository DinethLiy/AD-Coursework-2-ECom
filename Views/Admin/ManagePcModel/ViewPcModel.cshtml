@model IEnumerable<eComMaster.Models.MasterData.PcModel>
@{
    ViewData["Title"] = "View PC Models";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int pcModelId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Models</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditPcModel" asp-route-pcModelId=-1 asp-controller="ManagePcModel">
            <span class="text">Create Model</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Models</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Series</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var pcModel in Model)
                        {
                            pcModelId = pcModel.PC_MODEL_ID;
                            <tr>
                                <td>@pcModel.PC_MODEL_ID</td>
                                <td>@pcModel.PC_SERIES_ID.PC_SERIES_NAME</td>
                                <td>@pcModel.PC_MODEL_NAME</td>
                                <td>@pcModel.PC_MODEL_DESCRIPTION</td>
                                <td>@pcModel.MODEL_PRICE.ToString("0.##")</td>
                                <td>@pcModel.QUANTITY</td>
                                <td>@pcModel.PC_MODEL_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditPcModel" asp-route-pcModelId=@pcModelId asp-controller="ManagePcModel">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeletePcModel" asp-route-pcModelId=@pcModelId asp-controller="ManagePcModel">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
