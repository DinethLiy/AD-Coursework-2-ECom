@{
    ViewData["Title"] = "Delete PC Model";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var selectedModel = ViewBag.selectedModel;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Are you sure you want to delete this model?</h1><br>
    </div>

    <!-- Details Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Model Details</h6>
            </div>
            <div class="card-body">
                <div class="mb-3"><label class="form-label">PC Model ID: @selectedModel.PC_MODEL_ID</label></div>
                <div class="mb-3"><label class="form-label">PC Series: @selectedModel.PC_SERIES_ID.PC_SERIES_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Model Name: @selectedModel.PC_MODEL_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Model Description: @selectedModel.PC_MODEL_DESCRIPTION</label></div>
                <div class="mb-3"><label class="form-label">PC Model Price: @selectedModel.MODEL_PRICE.ToString("0.##")</label></div>
                <div class="mb-3"><label class="form-label">PC Model Quantity: @selectedModel.QUANTITY</label></div>
                <div class="mb-3"><label class="form-label">Casing: @selectedModel.CONFIG_CASING_ID.CASING_NAME</label></div>
                <div class="mb-3"><label class="form-label">Display: @selectedModel.CONFIG_DISPLAY_ID.DISPLAY_NAME</label></div>
                <div class="mb-3"><label class="form-label">Graphics: @selectedModel.CONFIG_GRAPHICS_ID.GRAPHICS_NAME</label></div>
                <div class="mb-3"><label class="form-label">Memory: @selectedModel.CONFIG_MEMORY_ID.MEMORY_NAME</label></div>
                <div class="mb-3"><label class="form-label">Misc: @selectedModel.CONFIG_MISC_ID.MISC_NAME</label></div>
                <div class="mb-3"><label class="form-label">Ports: @selectedModel.CONFIG_PORTS_ID.PORTS_NAME</label></div>
                <div class="mb-3"><label class="form-label">Power: @selectedModel.CONFIG_POWER_ID.POWER_NAME</label></div>
                <div class="mb-3"><label class="form-label">Processor: @selectedModel.CONFIG_PROCESSOR_ID.PROCESSOR_NAME</label></div>
                <div class="mb-3"><label class="form-label">Storage: @selectedModel.CONFIG_STORAGE_ID.STORAGE_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Model Status: @selectedModel.PC_MODEL_STATUS</label></div>
                <div class="mb-3">
                    <a class="btn btn-danger btn-icon-split" asp-action="DeletePcModel" asp-route-pcModelId=@selectedModel.PC_MODEL_ID asp-controller="ManagePcModel">
                        <span class="text">Yes</span>
                    </a>
                    <a class="btn btn-info btn-icon-split" asp-action="Index" asp-controller="ManagePcModel">
                        <span class="text">No</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
