@model IEnumerable<eComMaster.Models.MasterData.PcSeries>
@{
    ViewData["Title"] = "View PC Series";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int pcSeriesId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Series</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditPcSeries" asp-route-pcSeriesId=-1 asp-controller="ManagePcSeries">
            <span class="text">Create Series</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Series</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Category</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var series in Model)
                        {
                            pcSeriesId = series.PC_SERIES_ID;
                            <tr>
                                <td>@series.PC_SERIES_ID</td>
                                <td>@series.PC_CATEGORY_ID.PC_CATEGORY_NAME</td>
                                <td>@series.PC_SERIES_NAME</td>
                                <td>@series.PC_SERIES_DESCRIPTION</td>
                                <td>@series.PC_SERIES_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditPcSeries" asp-route-pcSeriesId=@pcSeriesId asp-controller="ManagePcSeries">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeletePcSeries" asp-route-pcSeriesId=@pcSeriesId asp-controller="ManagePcSeries">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
