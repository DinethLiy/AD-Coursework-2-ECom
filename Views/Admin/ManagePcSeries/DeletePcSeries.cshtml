@{
    ViewData["Title"] = "Delete PC Series";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    dynamic? selectedSeries = TempData["selectedSeries"];
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Are you sure you want to delete this series?</h1><br>
    </div>

    <!-- Details Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Series Details</h6>
            </div>
            <div class="card-body">
                <div class="mb-3"><label class="form-label">PC Series ID: @selectedSeries.PC_SERIES_ID</label></div>
                <div class="mb-3"><label class="form-label">PC Category: @selectedSeries.PC_CATEGORY_ID.PC_CATEGORY_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Series Name: @selectedSeries.PC_SERIES_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Series Description: @selectedSeries.PC_SERIES_DESCRIPTION</label></div>
                <div class="mb-3"><label class="form-label">PC Series Status: @selectedSeries.PC_SERIES_STATUS</label></div>
                <div class="mb-3">
                    <a class="btn btn-danger btn-icon-split" asp-action="DeletePcSeries" asp-route-pcSeriesId=@selectedSeries.PC_SERIES_ID asp-controller="ManagePcSeries">
                        <span class="text">Yes</span>
                    </a>
                    <a class="btn btn-info btn-icon-split" asp-action="Index" asp-controller="ManagePcSeries">
                        <span class="text">No</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
