@{
    ViewData["Title"] = "Delete PC Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    dynamic? selectedCategory = TempData["selectedCategory"];
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Are you sure you want to delete this category?</h1><br>
    </div>

    <!-- Details Card -->
    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Category Details</h6>
            </div>
            <div class="card-body">
                <div class="mb-3"><label class="form-label">PC Category ID: @selectedCategory.PC_CATEGORY_ID</label></div>
                <div class="mb-3"><label class="form-label">PC Category Name: @selectedCategory.PC_CATEGORY_NAME</label></div>
                <div class="mb-3"><label class="form-label">PC Category Description: @selectedCategory.PC_CATEGORY_DESCRIPTION</label></div>
                <div class="mb-3"><label class="form-label">PC Category Status: @selectedCategory.PC_CATEGORY_STATUS</label></div>
                <div class="mb-3">
                    <a class="btn btn-danger btn-icon-split" asp-action="DeletePcCategory" asp-route-pcCategoryId=@selectedCategory.PC_CATEGORY_ID asp-controller="ManagePcCategories">
                        <span class="text">Yes</span>
                    </a>
                    <a class="btn btn-info btn-icon-split" asp-action="Index" asp-controller="ManagePcCategories">
                        <span class="text">No</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
