@model IEnumerable<eComMaster.Models.MasterData.PcCategory>
@{
    ViewData["Title"] = "View PC Categories";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int pcCategoryId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Manage PC Categories</h1>
        <a class="btn btn-success btn-icon-split" asp-action="ShowAddEditPcCategory" asp-route-pcCategoryId=-1 asp-controller="ManagePcCategories">
            <span class="text">Create Category</span>
        </a>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Categories</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Status</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            pcCategoryId = category.PC_CATEGORY_ID;
                            <tr>
                                <td>@category.PC_CATEGORY_ID</td>
                                <td>@category.PC_CATEGORY_NAME</td>
                                <td>@category.PC_CATEGORY_DESCRIPTION</td>
                                <td>@category.PC_CATEGORY_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowAddEditPcCategory" asp-route-pcCategoryId=@pcCategoryId asp-controller="ManagePcCategories">
                                            <span class="text">Edit</span>
                                        </a>
                                    </center>
                                </td>
                                <td>
                                    <center>
                                        <a class="btn btn-danger btn-icon-split" asp-action="ShowDeletePcCategory" asp-route-pcCategoryId=@pcCategoryId asp-controller="ManagePcCategories">
                                            <span class="text">Delete</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
