@model IEnumerable<eComMaster.Models.CustomerData.Order>
@{
    ViewData["Title"] = "View Order History";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int orderId = 0;
}
<body>
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Order History</h1>
    </div>

    <div class="col">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Orders</h6>
            </div>
            <div class="card-body">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Model</th>
                            <th>Customer</th>
                            <th>Payment</th>
                            <th>Status</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            orderId = order.ORDER_ID;
                            <tr>
                                <td>@order.ORDER_ID</td>
                                <td>@order.PcModel.PC_MODEL_NAME</td>
                                <td>@order.Customer.NAME</td>
                                <td>@order.ORDER_AMOUNT.ToString("0.##")</td>
                                <td>@order.ORDER_STATUS</td>
                                <td>
                                    <center>
                                        <a class="btn btn-info btn-icon-split" asp-action="ShowEditOrder" asp-route-orderId=@orderId asp-controller="ManageOrder">
                                            <span class="text">Update</span>
                                        </a>
                                    </center>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
