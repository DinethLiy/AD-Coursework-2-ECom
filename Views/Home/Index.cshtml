@model List<eComMaster.Models.MasterData.PcCategory>
<!DOCTYPE html>
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/Home">eComMaster</a>


            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">


                <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="/Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Orders">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Auth" asp-action="Index">My Account</a>
                        </li>

                    </ul>
                    <a href="@Url.Action("Index", "Cart")" class="btn btn-outline-primary mx-2">Cart <span class="badge bg-secondary"></span></a>

                    <form class="d-flex ms-auto" role="search"  action="@Url.Action("Index", "Search")" method="get">
                        <input class="form-control me-2" type="search" name="searchTerm" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
    </nav>


    <h3 style="margin-left:10px">Pc Categories</h3>
    <div style="overflow-x: scroll; white-space: nowrap; margin-left: 20px;">
        @foreach (var category in Model)
        {
            <div class="card" style="display: inline-block; margin-right: 10px;">
                <div class="card-header">
                    <h5 class="card-title">PC_CATEGORY_ID: @category.PC_CATEGORY_ID</h5>
                </div>
                <div class="card-body">
                    <h6 class="card-subtitle mb-2 text-muted">PC_CATEGORY_NAME: @category.PC_CATEGORY_NAME</h6>
                    <p class="card-text">PC_CATEGORY_DESCRIPTION: @category.PC_CATEGORY_DESCRIPTION.Substring(0, Math.Min(10,
                                                                 @category.PC_CATEGORY_DESCRIPTION.Length))@(category.PC_CATEGORY_DESCRIPTION.Length > 10 ? "..." : "")</p>
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Series", new { categoryId = category.PC_CATEGORY_ID })" class="btn btn-primary">Show Available Series</a>
                </div>
            </div>
        }
    </div>

</body>
</html>