@model IEnumerable<eComMaster.Models.CustomerData.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PcModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ORDER_AMOUNT)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ORDER_STATUS)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CREATED_DATE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MODIFIED_DATE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DELETED_DATE)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PcModel.PC_MODEL_STATUS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CUSTOMER_STATUS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ORDER_AMOUNT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ORDER_STATUS)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CREATED_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MODIFIED_DATE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DELETED_DATE)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ORDER_ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ORDER_ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ORDER_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
